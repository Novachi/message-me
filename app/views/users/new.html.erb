<h1 align="center">Welcome to Message.Me - a complete Chat App</h1>
<h4 class="ui center aligned medium icon header">
  <i class="circular green power off icon"></i>
  Message.Me
</h4>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for :user, html: { class: 'ui form', role: 'form' }, url: users_path do |f| %>
        <div class="field">
          <%= f.label :email %>
          <div class="ui left icon input">
            <%= f.email_field :email, placeholder: 'Email' %>
            <i class="envelope icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: 'Username' %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: 'Password' %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit 'Register', { class: 'ui green submit button' }%>
      <% end %>
    </div>
    <div class="middle aligned column">
      <%= link_to '<i class="sign-in icon"></i> Sign In'.html_safe, login_path, { class: 'ui green big button' } %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>