<div class="card">
  <div class="blurring dimmable image h-auto p-15-px">
    <div class="ui dimmer">
      <div class="content">
        <div class="center">
          <div class="ui inverted button">Add Friend</div>
        </div>
      </div>
    </div>
    <%= image_tag "user.png"%>
  </div>
  <div class="content">
    <a class="header"><%= user.username %></a>
    <div class="meta">
      <span class="date">User since: <%= user.created_at.strftime('%d/%m/%Y')%></span>
    </div>
  </div>
  <div class="extra content">
    <a>
      <i class="users icon"></i>
      <%= user.friends.count %> Friends
    </a>
  </div>
</div>